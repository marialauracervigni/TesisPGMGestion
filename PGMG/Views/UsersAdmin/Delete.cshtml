@model PGMG.Models.ApplicationUser

@{
    ViewBag.Title = "Eliminar";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">

    @using (Ajax.BeginForm("Delete", "UsersAdmin", null, new AjaxOptions
    {
        HttpMethod = "POST",
        Url = Url.Action("Delete", "UsersAdmin"),
        UpdateTargetId = "modal-content",
        OnSuccess = "closeModal",
        InsertionMode = InsertionMode.Replace
    },
    new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h5>¿Desea eliminar el usuario?</h5>
            <input type="submit" value="Eliminar" class="btn btn-default" data-target="#modal-eliminar" data-toggle="modal"/>
            <input type="button" value="Cancelar" id="cancelar" class="btn btn-default"  data-target="#modal-eliminar" data-toggle="modal" />
        </div>
    }
</div>

@section Scripts{
    <script>
    </script>
}
