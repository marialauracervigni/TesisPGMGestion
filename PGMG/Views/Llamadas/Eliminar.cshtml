@model PGMG.Models.Llamada

@{
    ViewBag.Title = "Eliminar";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"
        <span>&times;</span>
    </button>
</div>
<div class="modal-body">

    @using (Ajax.BeginForm("Eliminar", "Llamadas", null, new AjaxOptions
    {
        HttpMethod = "POST",
        Url = Url.Action("Eliminar", "Llamadas"),
        UpdateTargetId = "modal-content",
        OnSuccess = "closeModal",
        InsertionMode = InsertionMode.Replace
    },
    new { @class = "form-horizontal", role = "form", id = "frmCrear" }))
    {
        @Html.AntiForgeryToken()
    <div class="centrar">

        <h4>¿Desea eliminar la tarea pendiente?</h4>

        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Fecha):</b>
            @Model.Fecha.ToShortDateString()
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Hora):</b>
            @Model.Hora.ToShortTimeString()
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.NombreCliente):</b>
            @Html.DisplayFor(model => model.NombreCliente)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.NombreEmpleado):</b>
            @Html.DisplayFor(model => model.NombreEmpleado)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Tema):</b>
            @Html.DisplayFor(model => model.Tema)
        </div>
        <br />

        <input type="submit" value="Eliminar" class="btn btn-default" data-target="#modal-eliminar" data-toggle="modal" />
        <input type="button" value="Cancelar" class="btn btn-default" data-target="#modal-eliminar" data-toggle="modal" />

    </div>
    }
</div>

@section Scripts{
    <script>

        function closeModal(data) {
            if (data.success) {
                $('#modal-eliminar').modal('hide');
                window.location.reload();
                window.location.href = "/Llamadas/indexpendientes";
            }
        }
    </script>
}