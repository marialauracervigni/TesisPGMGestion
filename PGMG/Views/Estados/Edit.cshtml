@model PGMG.Models.Estado

@{
    ViewBag.Title = "Editar";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"
            <span>&times;</span>
    </button>
</div>
<div class="modal-body centrar">
    <dl class="dl-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.EstadoId)

            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                <br />
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "login" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" data-target="#modal-editar" data-toggle="modal" />
                <input type="button" value="Cancelar" class="btn btn-default" data-target="#modal-editar" data-toggle="modal" />
            </div>
        </div>
        }
    </dl>
</div>


@section Scripts{
    <script>
        function closeModal(data) {
            if (data.success) {
                $('#modal-editar').modal('hide');
                window.location.href = "/Estados/index";
            }
        }
    </script>
}